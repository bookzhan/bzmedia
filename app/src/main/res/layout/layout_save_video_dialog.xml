<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please select the video resolution\nand quality to save"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Video resolution:"
        android:textColor="#000"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/sp_resolution"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:entries="@array/video_resolution"
        android:spinnerMode="dropdown"
        android:textColor="#000" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#292929" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Video quality:"
        android:textColor="#000"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/sp_quality"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:entries="@array/video_quality"
        android:spinnerMode="dropdown"
        android:textColor="#000" />

    <Button
        android:id="@+id/bt_save_video"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Save Video" />
</LinearLayout>